#!/bin/sh

env

cd /srv/live

pip3 install -r django_project/REQUIREMENTS-dev.txt

# collect pip package cache
mkdir -p $DESTDIR/root
cp -a /root/.cache $DESTDIR/root

# build static files
cd django_project && python3 manage.py collectstatic --settings=core.settings.build --noinput -c && cd ..

mkdir -p $DESTDIR/srv/live/django_project
cp -a django_project/static $DESTDIR/srv/live/django_project
